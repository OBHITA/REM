                            </Grid>
                          </DataTemplate>
                        </telerik:RadMenuItem.HeaderTemplate>
                        <telerik:RadMenuItem Header="Send To Billing via bus"
                                             Command="{Binding DataSource.SendToBilling, Source={StaticResource RootDataContextProxy}}"
                                             CommandParameter="{Binding Key}" />
                        <telerik:RadMenuItem Header="Send To Billing directly"
                                             Command="{Binding DataSource.SendToBillingDirectly, Source={StaticResource RootDataContextProxy}}"
                                             CommandParameter="{Binding Key}" />
                      </telerik:RadMenuItem>
                    </telerik:RadMenu>
                  </DataTemplate>
                </telerik:GridViewDataColumn.CellTemplate>
              </telerik:GridViewDataColumn>
            </telerik:RadGridView.Columns>
          </telerik:RadGridView>
        </Grid>
        <CustomControls:LoadingControl IsLoading="{Binding IsLoading}" Grid.Row="0" Grid.RowSpan="2" />
      </Grid>
    </Grid>
  </Border>
</UserControl>