          <CustomControls:ToolSetButton Text="Profile" Command="{Binding GoToProfileCommand}"
                                        ToolTip="Edit the Billing Office's profile information." />
        </CustomControls:ToolSetGroup.Items>
      </CustomControls:ToolSetGroup>
    </CustomControls:CollapsingPanel>
