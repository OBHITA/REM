        <TextBlock Style="{StaticResource MainHeaderTextBlockStyle}" TextWrapping="Wrap"
                   Text="Claims Dashboard" d:LayoutOverrides="Width" HorizontalAlignment="Left" />
      </StackPanel>
    </Border>
    <Border CornerRadius="0,0,9,9" Background="{StaticResource MainBackgroundBorder}" Grid.Row="1" Grid.RowSpan="2"
            BorderThickness="0" />
    <Border CornerRadius="10" Background="{StaticResource TileHeaderGradientBackground}" Grid.Row="1" Height="75"
            Margin="10,10,10,0" BorderBrush="Black" BorderThickness="1">
      <Grid>
        <Grid.ColumnDefinitions>
          <ColumnDefinition Width="auto" />
          <ColumnDefinition Width="*" />
          <ColumnDefinition Width="*" />
          <ColumnDefinition Width="auto" />
          <ColumnDefinition Width="auto" />
        </Grid.ColumnDefinitions>
        <StackPanel Grid.Column="0" Margin="10" VerticalAlignment="Center">
          <TextBlock Text="BATCH SUMMARY" FontSize="14" FontWeight="Bold" HorizontalAlignment="Center" />
        </StackPanel>
        <Grid Grid.Column="1" Margin="5" HorizontalAlignment="Center">
          <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto" />
            <ColumnDefinition Width="*" />
          </Grid.ColumnDefinitions>
          <StackPanel VerticalAlignment="Center" Grid.Column="0" Margin="5,5,20,5">
            <TextBlock Foreground="#666666" Text="Total Charges" FontSize="12" HorizontalAlignment="Center" />
            <TextBlock Text="{Binding BatchSummary.TotalCharges,StringFormat='c0'}"
                       HorizontalAlignment="Center" FontWeight="Medium" FontSize="14" />
          </StackPanel>
          <ScrollViewer Grid.Column="1" Margin="5" MinWidth="150" Padding="0" BorderThickness="0"
                        VerticalScrollBarVisibility="Auto">
            <ItemsControl VerticalAlignment="Center"
                          ItemsSource="{Binding BatchSummary.ClaimChargesByPayorTypeList}">
              <ItemsControl.ItemTemplate>
                <DataTemplate>
                  <StackPanel HorizontalAlignment="Stretch">
                    <TextBlock Text="{Binding}" TextWrapping="Wrap" HorizontalAlignment="Right"
                               Margin="0,0,15,0" />
                    <Line HorizontalAlignment="Stretch" X2="150" Stretch="Fill" Height="1"
                          StrokeDashArray="4,2" Stroke="DarkGray" />
                  </StackPanel>
                </DataTemplate>
              </ItemsControl.ItemTemplate>
            </ItemsControl>
          </ScrollViewer>
        </Grid>
        <Grid Grid.Column="2" Margin="10" HorizontalAlignment="Center">
          <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto" />
            <ColumnDefinition Width="*" />
          </Grid.ColumnDefinitions>
          <StackPanel VerticalAlignment="Center" Grid.Column="0" Margin="5,5,20,5">
            <TextBlock Foreground="#666666" Text="Total Claims" FontSize="12" HorizontalAlignment="Center" />
            <TextBlock Text="{Binding BatchSummary.TotalClaims}" HorizontalAlignment="Center"
                       FontWeight="Medium" FontSize="14" />
          </StackPanel>
          <ScrollViewer Grid.Column="1" Margin="5" MinWidth="150" Padding="0" BorderThickness="0"
                        VerticalScrollBarVisibility="Auto">
            <ItemsControl VerticalAlignment="Center"
                          ItemsSource="{Binding BatchSummary.ClaimCountByPayorTypeList}">
              <ItemsControl.ItemTemplate>
                <DataTemplate>
                  <StackPanel HorizontalAlignment="Stretch">
                    <TextBlock Text="{Binding}" TextWrapping="Wrap" HorizontalAlignment="Right"
                               Margin="0,0,15,0" />
                    <Line HorizontalAlignment="Stretch" X2="150" Stretch="Fill" Height="1"
                          StrokeDashArray="4,2" Stroke="DarkGray" />
                  </StackPanel>
                </DataTemplate>
              </ItemsControl.ItemTemplate>
            </ItemsControl>
          </ScrollViewer>
        </Grid>
        <StackPanel VerticalAlignment="Center" Grid.Column="3" Margin="10">
          <TextBlock Foreground="#666666" Text="Errors" FontSize="12" HorizontalAlignment="Center" />
          <TextBlock Text="{Binding BatchSummary.ErrorCount}" HorizontalAlignment="Center"
                     FontWeight="Medium" FontSize="14" />
        </StackPanel>
        <StackPanel VerticalAlignment="Center" Grid.Column="4" Margin="10">
          <TextBlock Foreground="#666666" Text="On Hold" FontSize="12" HorizontalAlignment="Center" />
          <TextBlock Text="{Binding BatchSummary.HoldCount}" HorizontalAlignment="Center" FontWeight="Medium"
                     FontSize="14" />
        </StackPanel>
        <Border Grid.Column="1" BorderBrush="Black" BorderThickness="1,0,1,0" />
        <Border Grid.Column="3" BorderBrush="Black" BorderThickness="1,0,1,0" />
      </Grid>
    </Border>
    <telerik:RadTileView Grid.Row="2" Regions:RegionManager.RegionName="ClaimsTilesRegion" Background="#00C0C0C0"
                         MaxColumns="2" ColumnWidth="auto" Margin="9,9,9,12" MinimizedColumnWidth="350" IsDockingEnabled="True"
                         IsItemDraggingEnabled="False" IsSelectionEnabled="False" IsItemsSizeInPercentages="True" IsVirtualizing="False"
                         PreservePositionWhenMaximized="true" RowHeight="auto" MinimizedRowHeight="Auto"
                         telerik:TileViewPanel.IsColumnsShrinkEnabled="True" telerik:TileViewPanel.IsRowsShrinkEnabled="True"
                         telerik:TileViewPanel.IsSizeBoundToPosition="True" />
  </Grid>
</UserControl>