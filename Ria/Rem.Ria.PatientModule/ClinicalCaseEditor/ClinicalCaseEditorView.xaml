            </CustomControls:Editor.HeaderTemplate>
            <CustomControls:Editor.Expanders>
                <CustomControls:EditableExpander x:Name="Profile" Header="Case Initiation" Content="{Binding EditingDto.ClinicalCaseProfile}">
                    <CustomControls:EditableExpander.Resources>
                    </CustomControls:EditableExpander.Resources>
                    <CustomControls:EditableExpander.ContentTemplate>
                        <DataTemplate>
                            <Border Style="{StaticResource EditFormSectionBorderStyle}">
                                <StackPanel>
                                    <StackPanel Orientation="Horizontal">
                                        <StackPanel Style="{StaticResource EditFormStackPanelStyleL}">
                                            <TextBlock Text="Initial Location" Style="{StaticResource EditFormLabelTextBlockStyle}" />
                                            <TextBlock Text="{Binding InitialLocation.DisplayName, FallbackValue='-', TargetNullValue='-'}"  Style="{StaticResource EditFormDataElementTextBlockStyle}" />
                                        </StackPanel>
                                        <StackPanel Style="{StaticResource EditFormStackPanelStyleS}">
                                            <TextBlock Text="Start Date"  Style="{StaticResource EditFormLabelTextBlockStyle}"/>
                                            <TextBlock Text="{Binding ClinicalCaseStartDate, StringFormat=d, FallbackValue='-', TargetNullValue='-'}"  Style="{StaticResource EditFormDataElementTextBlockStyle}"/>
                                        </StackPanel>
                                        <StackPanel Style="{StaticResource EditFormStackPanelStyleM}">
                                            <TextBlock Text="Performed by"  Style="{StaticResource EditFormLabelTextBlockStyle}"/>
                                            <TextBlock Text="{Binding PerformedByStaff.FullName, FallbackValue='-', TargetNullValue='-'}"  Style="{StaticResource EditFormDataElementTextBlockStyle}"/>
                                        </StackPanel>
                                    </StackPanel>
                                    <StackPanel Orientation="Horizontal">
                                        <StackPanel Style="{StaticResource EditFormStackPanelStyleXL}">
                                            <TextBlock Text="Presenting Problem" Style="{StaticResource EditFormLabelTextBlockStyle}" />
                                            <TextBlock Text="{Binding PatientPresentingProblemNote, FallbackValue='-', TargetNullValue='-'}" Style="{StaticResource EditFormDataElementTextBlockStyle}" />
                                        </StackPanel>
                                    </StackPanel>
                                    <StackPanel Orientation="Horizontal">
                                        <StackPanel Style="{StaticResource EditFormStackPanelStyleL}">
                                            <TextBlock Text="Referred Source" Style="{StaticResource EditFormLabelTextBlockStyle}" />
                                            <TextBlock Text="{Binding ReferralType, FallbackValue='-', TargetNullValue='-'}"  Style="{StaticResource EditFormDataElementTextBlockStyle}"/>
                                        </StackPanel>
                                        <StackPanel Style="{StaticResource EditFormStackPanelStyle}">
                                            <TextBlock Text="Initial Contact Via"  Style="{StaticResource EditFormLabelTextBlockStyle}"/>
                                            <TextBlock Text="{Binding InitialContactMethod, FallbackValue='-', TargetNullValue='-'}" Style="{StaticResource EditFormDataElementTextBlockStyle}" />
                                        </StackPanel>
                                    </StackPanel>
                                    <Border Style="{StaticResource HorizontalLineEditFormDivider}"/>
                                    <Border Style="{StaticResource EditFormCommentsBorderStyle}">
                                        <StackPanel Orientation="Vertical">
                                            <StackPanel Orientation="Horizontal">
                                                <StackPanel Style="{StaticResource EditFormStackPanelStyleL}">
                                                    <TextBlock Text="Signed Comments" Style="{StaticResource EditFormLabelTextBlockStyle}"/>
                                                </StackPanel>
                                                <StackPanel Style="{StaticResource EditFormStackPanelStyle}">
                                                    <TextBlock Text="Signed Date" Style="{StaticResource EditFormLabelTextBlockStyle}"/>
                                                </StackPanel>
                                                <StackPanel Style="{StaticResource EditFormStackPanelStyleM}">
                                                    <TextBlock Text="Staff Name" Style="{StaticResource EditFormLabelTextBlockStyle}"/>
                                                </StackPanel>
                                            </StackPanel>
                                            <StackPanel>
                                                <ItemsControl ItemsSource="{Binding SignedComments, Mode=OneWay}">
                                                    <ItemsControl.ItemTemplate>
                                                        <DataTemplate>
                                                            <Border>
                                                                <StackPanel>
                                                                    <StackPanel Orientation="Horizontal">
                                                                        <StackPanel Style="{StaticResource EditFormStackPanelStyleL}">
                                                                            <TextBlock Text="{Binding SignedNote}" TextWrapping="Wrap" Style="{StaticResource EditFormDataElementTextBlockStyle}" />
                                                                        </StackPanel>
                                                                        <StackPanel Style="{StaticResource EditFormStackPanelStyle}">
                                                                            <TextBlock Text="{Binding SignedTimestamp, StringFormat=g}" Style="{StaticResource EditFormDataElementTextBlockStyle}"/>
                                                                        </StackPanel>
                                                                        <StackPanel Style="{StaticResource EditFormStackPanelStyleM}">
                                                                            <TextBlock Text="{Binding Staff.FullName}" Style="{StaticResource EditFormDataElementTextBlockStyle}"/>
                                                                        </StackPanel>
                                                                    </StackPanel>
                                                                </StackPanel>
                                                            </Border>
                                                        </DataTemplate>
                                                    </ItemsControl.ItemTemplate>
                                                </ItemsControl>
                                            </StackPanel>
                                        </StackPanel>
                                    </Border>
                                    <Border Style="{StaticResource HorizontalLineEditFormDivider}"/>
                                    <StackPanel Orientation="Horizontal">
                                        <StackPanel Style="{StaticResource EditFormStackPanelStyleL}">
                                            <TextBlock Text="Special Initiatives"  Style="{StaticResource EditFormLabelTextBlockStyle}"/>
                                            <ItemsControl ItemsSource="{Binding SpecialInitiatives, FallbackValue='-', TargetNullValue='-'}" Style="{StaticResource ICStyle}"/>
                                        </StackPanel>
                                        <StackPanel Style="{StaticResource EditFormStackPanelStyleL}">
                                            <TextBlock Text="Priority Population"  Style="{StaticResource EditFormLabelTextBlockStyle}"/>
                                            <ItemsControl ItemsSource="{Binding PriorityPopulations, FallbackValue='-', TargetNullValue='-'}" Style="{StaticResource ICStyle}"/>
                                        </StackPanel>
                                    </StackPanel>
                                    <Border Style="{StaticResource HorizontalLineEditFormDivider}"/>
                                    <StackPanel Orientation="Horizontal">
                                        <StackPanel Style="{StaticResource EditFormStackPanelStyleL}">
                                            <TextBlock Text="Case Contact"  Style="{StaticResource EditFormLabelTextBlockStyle}"/>
                                            <ItemsControl>
                                            </ItemsControl>
                                        </StackPanel>
                                    </StackPanel>
                                </StackPanel>
                            </Border>
                        </DataTemplate>
                    </CustomControls:EditableExpander.ContentTemplate>
                    <CustomControls:EditableExpander.ContentEditTemplate>
                        <DataTemplate>
                            <Border Style="{StaticResource EditFormSectionBorderStyle}">
                                <StackPanel>
                                    <StackPanel Orientation="Horizontal">
                                        <StackPanel Style="{StaticResource EditFormStackPanelStyleL}" Width="auto">
                                            <TextBlock Text="Initial Location" Style="{StaticResource EditFormLabelTextBlockStyle}" />
                                            <ContentControl Regions:RegionManager.RegionName="LocationQuickPicker" HorizontalContentAlignment="Stretch">
                                                <Regions:RegionManager.RegionContext>
                                                    <ViewModel:QuickPickerCommunicator CanAdd="false" SelectedItem="{Binding InitialLocation, Mode=TwoWay}"/>
                                                </Regions:RegionManager.RegionContext>
                                            </ContentControl>
                                        </StackPanel>
                                        <StackPanel Style="{StaticResource EditFormStackPanelStyleS}">
                                            <TextBlock Text="Start Date" Style="{StaticResource EditFormLabelTextBlockStyle}" />
                                            <telerik:RadDateTimePicker InputMode="DatePicker" DateTimeWatermarkContent="mm/dd/yyyy" SelectedValue="{Binding ClinicalCaseStartDate, Mode=TwoWay}"/>
                                        </StackPanel>
                                        <StackPanel Style="{StaticResource EditFormStackPanelStyleM}" Width="auto">
                                            <TextBlock Text="Performed by"  Style="{StaticResource EditFormLabelTextBlockStyle}"/>
                                            <ContentControl Regions:RegionManager.RegionName="StaffQuickPicker" HorizontalContentAlignment="Stretch">
                                                <Regions:RegionManager.RegionContext>
                                                    <ViewModel:QuickPickerCommunicator CanAdd="false" SelectedItem="{Binding PerformedByStaff, Mode=TwoWay}"/>
                                                </Regions:RegionManager.RegionContext>
                                            </ContentControl>
                                        </StackPanel>
                                    </StackPanel>
                                    <StackPanel Orientation="Horizontal">
                                        <StackPanel Style="{StaticResource EditFormStackPanelStyleXL}">
                                            <TextBlock Text="Presenting Problem" Style="{StaticResource EditFormLabelTextBlockStyle}" />
                                            <telerik:RadMaskedTextBox x:Name="PatientPresentingProblemNote" MaskedText="{Binding PatientPresentingProblemNote,Mode=TwoWay}" MaskType="None" EmptyContent="Patient Presenting Problem Note" EmptyContentTemplate="{StaticResource WatermarkTemplate}"/>
                                        </StackPanel>
                                    </StackPanel>
                                    <StackPanel Orientation="Horizontal">
                                        <StackPanel Style="{StaticResource EditFormStackPanelStyleL}">
                                            <TextBlock Text="Referred Source" Style="{StaticResource EditFormLabelTextBlockStyle}" />
                                            <telerik:RadComboBox x:Name="ReferralTypeComboBox" 
                                                ItemsSource="{Binding Source={StaticResource RootDataContext}, Path=DataSource.LookupValueLists[ReferralType]}" 
                                                EmptyText="Referred Source" 
                                                SelectedItem="{Binding ReferralType,Mode=TwoWay}" 
                                                DisplayMemberPath="Name"/>
                                        </StackPanel>
                                        <StackPanel Style="{StaticResource EditFormStackPanelStyle}">
                                            <TextBlock Text="Initial Contact Via" Style="{StaticResource EditFormLabelTextBlockStyle}"/>
                                            <telerik:RadComboBox x:Name="InitialContactMethodComboBox" 
                                                ItemsSource="{Binding Source={StaticResource RootDataContext}, Path=DataSource.LookupValueLists[InitialContactMethod]}" 
                                                EmptyText="Initial Contact Via" 
                                                SelectedItem="{Binding InitialContactMethod,Mode=TwoWay}" 
                                                DisplayMemberPath="Name"/>
                                        </StackPanel>
                                    </StackPanel>
                                    <Border Style="{StaticResource HorizontalLineEditFormDivider}"/>
                                    <Border Style="{StaticResource EditFormCommentsBorderStyle}">
                                        <StackPanel Orientation="Vertical">
                                            <StackPanel Style="{StaticResource EditFormStackPanelStyleXL}">
                                                <TextBlock Text="Comments" Style="{StaticResource EditFormLabelTextBlockStyle}" />
                                                <telerik:RadMaskedTextBox x:Name="SignedComment" MaskedText="{Binding Source={StaticResource RootDataContext}, Path=DataSource.ClinicalCaseSigningNote}" MaskType="None" EmptyContent="This comment is added to the signed comments when signed." EmptyContentTemplate="{StaticResource WatermarkTemplate}" MaxHeight="60" ScrollViewer.VerticalScrollBarVisibility="Auto"/>
                                                <StackPanel Orientation="Vertical">
                                                    <StackPanel Style="{StaticResource EditFormStackPanelStyleS}" HorizontalAlignment="Right">
                                                        <telerik:RadButton Content="Sign Comment" >
                                                            <i:Interaction.Triggers>
                                                                <i:EventTrigger EventName="Click">
                                                                    <i:InvokeCommandAction Command="{Binding Source={StaticResource RootDataContext}, Path=DataSource.SignCommentCommand}" CommandParameter="{Binding ElementName=SignedComment, Path=MaskedText}"/>
                                                                    <ei:ChangePropertyAction TargetName="SignedComment" PropertyName="MaskedText" Value="" />
                                                                </i:EventTrigger>
                                                            </i:Interaction.Triggers>
                                                        </telerik:RadButton>
                                                    </StackPanel>
                                                </StackPanel>
                                            </StackPanel>
                                            <StackPanel Orientation="Horizontal">
                                                <StackPanel Style="{StaticResource EditFormStackPanelStyleL}">
                                                    <TextBlock Text="Signed Note" Style="{StaticResource EditFormLabelTextBlockStyle}"/>
                                                </StackPanel>
                                                <StackPanel Style="{StaticResource EditFormStackPanelStyle}">
                                                    <TextBlock Text="Signed Date" Style="{StaticResource EditFormLabelTextBlockStyle}"/>
                                                </StackPanel>
                                                <StackPanel Style="{StaticResource EditFormStackPanelStyleM}">
                                                    <TextBlock Text="Staff Name" Style="{StaticResource EditFormLabelTextBlockStyle}"/>
                                                </StackPanel>
                                            </StackPanel>
                                            <StackPanel Orientation="Vertical">
                                                <ItemsControl ItemsSource="{Binding SignedComments, Mode=OneWay}">
                                                    <ItemsControl.ItemTemplate>
                                                        <DataTemplate>
                                                            <Border>
                                                                <StackPanel>
                                                                    <StackPanel Orientation="Horizontal">
                                                                        <StackPanel Style="{StaticResource EditFormStackPanelStyleL}">
                                                                            <TextBlock Text="{Binding SignedNote, FallbackValue='-', TargetNullValue='-'}" TextWrapping="Wrap" Style="{StaticResource EditFormDataElementTextBlockStyle}" />
                                                                        </StackPanel>
                                                                        <StackPanel Style="{StaticResource EditFormStackPanelStyle}">
                                                                            <TextBlock Text="{Binding SignedTimestamp, StringFormat=g, FallbackValue='-', TargetNullValue='-'}" Style="{StaticResource EditFormDataElementTextBlockStyle}"/>
                                                                        </StackPanel>
                                                                        <StackPanel Style="{StaticResource EditFormStackPanelStyleM}">
                                                                            <TextBlock Text="{Binding Staff.FullName, FallbackValue='-', TargetNullValue='-'}" Style="{StaticResource EditFormDataElementTextBlockStyle}"/>
                                                                        </StackPanel>
                                                                    </StackPanel>
                                                                </StackPanel>
                                                            </Border>
                                                        </DataTemplate>
                                                    </ItemsControl.ItemTemplate>
                                                </ItemsControl>
                                            </StackPanel>
                                        </StackPanel>
                                    </Border>
                                    <Border Style="{StaticResource HorizontalLineEditFormDivider}"/>
                                    <StackPanel Orientation="Horizontal">
                                        <StackPanel Style="{StaticResource EditFormStackPanelStyleL}">
                                            <TextBlock Text="Special Initiatives (select all that apply)"  Style="{StaticResource EditFormLabelTextBlockStyle}"/>
                                            <ListBox Height="125" SelectionMode="Multiple" BorderBrush="Black" BorderThickness="1" ItemsSource="{Binding Source={StaticResource RootDataContext},Path=DataSource.LookupValueLists[SpecialInitiative]}" ScrollViewer.VerticalScrollBarVisibility="Auto">
                                                <i:Interaction.Behaviors>
                                                    <Behavior:SelectedItemsBindingBehavior SelectedItems="{Binding SpecialInitiatives,Mode=TwoWay}"/>
                                                </i:Interaction.Behaviors>
                                            </ListBox>
                                        </StackPanel>
                                        <StackPanel Style="{StaticResource EditFormStackPanelStyleL}">
                                            <TextBlock Text="Priority Population (select all that apply)"  Style="{StaticResource EditFormLabelTextBlockStyle}"/>
                                            <ListBox Height="125" SelectionMode="Multiple" BorderBrush="Black" BorderThickness="1" ItemsSource="{Binding Source={StaticResource RootDataContext},Path=DataSource.LookupValueLists[PriorityPopulation]}" ScrollViewer.VerticalScrollBarVisibility="Auto">
                                                <i:Interaction.Behaviors>
                                                    <Behavior:SelectedItemsBindingBehavior SelectedItems="{Binding PriorityPopulations,Mode=TwoWay}"/>
                                                </i:Interaction.Behaviors>
                                            </ListBox>
                                        </StackPanel>
                                    </StackPanel>
                                    <Border Style="{StaticResource HorizontalLineEditFormDivider}"/>
                                    <StackPanel Orientation="Horizontal">
                                        <StackPanel Style="{StaticResource EditFormStackPanelStyleL}">
                                            <TextBlock Text="Case Contact(s)"  Style="{StaticResource EditFormLabelTextBlockStyle}"/>
                                            <ListBox Height="125" SelectionMode="Multiple" BorderBrush="Black" BorderThickness="1" ScrollViewer.VerticalScrollBarVisibility="Auto">
                                                <i:Interaction.Behaviors>
                                                    <Behavior:SelectedItemsBindingBehavior />
                                                </i:Interaction.Behaviors>
                                            </ListBox>
                                            <StackPanel Style="{StaticResource EditFormStackPanelStyle}" HorizontalAlignment="Right">
                                                <telerik:RadButton Content="+ Add New Contact"/>
                                            </StackPanel>
                                        </StackPanel>
                                    </StackPanel>
                                </StackPanel>
                            </Border>
                        </DataTemplate>
                    </CustomControls:EditableExpander.ContentEditTemplate>
                </CustomControls:EditableExpander>
                <CustomControls:EditableExpander x:Name="CaseStatus" Header="Case Status" Content="{Binding EditingDto.ClinicalCaseStatus}">
                    <CustomControls:EditableExpander.Resources>
                    </CustomControls:EditableExpander.Resources>
                    <CustomControls:EditableExpander.ContentTemplate>
                        <DataTemplate>
                            <Border Style="{StaticResource EditFormSectionBorderStyle}">
                                <StackPanel>
                                    <StackPanel Orientation="Horizontal">
                                        <StackPanel Style="{StaticResource EditFormStackPanelStyle}">
                                            <TextBlock Text="Case Status" Style="{StaticResource EditFormLabelTextBlockStyle}" />
                                            <TextBlock Text="{Binding ClinicalCaseStatus, FallbackValue='-', TargetNullValue='-'}"  Style="{StaticResource EditFormDataElementTextBlockStyle}"/>
                                        </StackPanel>
                                        <StackPanel Style="{StaticResource EditFormStackPanelStyleS}">
                                            <TextBlock Text="Case Closed Date"  Style="{StaticResource EditFormLabelTextBlockStyle}"/>
                                            <TextBlock Text="{Binding ClinicalCaseCloseDate, StringFormat=d, FallbackValue='-', TargetNullValue='-'}" Style="{StaticResource EditFormDataElementTextBlockStyle}" />
                                        </StackPanel>
                                    </StackPanel>
                                    <StackPanel Orientation="Horizontal">
                                        <StackPanel Style="{StaticResource EditFormStackPanelStyleXL}">
                                            <TextBlock Text="Comments"  Style="{StaticResource EditFormLabelTextBlockStyle}"/>
                                            <TextBlock Text="{Binding ClinicalCaseClosingNote, FallbackValue='-', TargetNullValue='-'}" Style="{StaticResource EditFormDataElementTextBlockStyle}"/>
                                        </StackPanel>
                                    </StackPanel>
                                </StackPanel>
                            </Border>
                        </DataTemplate>
                    </CustomControls:EditableExpander.ContentTemplate>
                    <CustomControls:EditableExpander.ContentEditTemplate>
                        <DataTemplate>
                            <Border Style="{StaticResource EditFormSectionBorderStyle}">
                                <StackPanel>
                                    <StackPanel Orientation="Horizontal">
                                        <StackPanel Style="{StaticResource EditFormStackPanelStyle}">
                                            <TextBlock Text="Case Status" Style="{StaticResource EditFormLabelTextBlockStyle}" />
                                            <telerik:RadComboBox x:Name="ClinicalCaseStatusComboBox" 
                                                ItemsSource="{Binding Source={StaticResource RootDataContext}, Path=DataSource.LookupValueLists[ClinicalCaseStatus]}" 
                                                EmptyText="Case Status" 
                                                SelectedItem="{Binding ClinicalCaseStatus,Mode=TwoWay}" 
                                                DisplayMemberPath="Name"/>
                                        </StackPanel>
                                        <StackPanel Style="{StaticResource EditFormStackPanelStyleS}">
                                            <TextBlock Text="Case Closed Date"  Style="{StaticResource EditFormLabelTextBlockStyle}"/>
                                            <telerik:RadDateTimePicker InputMode="DatePicker" DateTimeWatermarkContent="mm/dd/yyyy" SelectedValue="{Binding ClinicalCaseCloseDate, Mode=TwoWay}"/>
                                        </StackPanel>
                                    </StackPanel>
                                    <StackPanel Orientation="Horizontal">
                                        <StackPanel Style="{StaticResource EditFormStackPanelStyleXL}">
                                            <TextBlock Text="Comments" Style="{StaticResource EditFormLabelTextBlockStyle}" />
                                            <telerik:RadMaskedTextBox x:Name="ClinicalCaseClosingNote" MaskedText="{Binding ClinicalCaseClosingNote,Mode=TwoWay}" MaskType="None" EmptyContent="Comments" EmptyContentTemplate="{StaticResource WatermarkTemplate}"/>
                                        </StackPanel>
                                    </StackPanel>
                                </StackPanel>
                            </Border>
                        </DataTemplate>
                    </CustomControls:EditableExpander.ContentEditTemplate>
                </CustomControls:EditableExpander>
                <CustomControls:EditableExpander x:Name="PreAdmission" Header="Pre-admission (UNDER CONSTRUCTION)" Content="">
                    <CustomControls:EditableExpander.Resources>
                    </CustomControls:EditableExpander.Resources>
                    <CustomControls:EditableExpander.ContentTemplate>
                        <DataTemplate>
                            <Border Style="{StaticResource EditFormSectionBorderStyle}">
                                <StackPanel>
                                    <StackPanel Orientation="Horizontal">
                                        <StackPanel Style="{StaticResource EditFormStackPanelStyleS}">
                                            <TextBlock Text="Admission Date"  Style="{StaticResource EditFormLabelTextBlockStyle}"/>
                                            <TextBlock Text=""  Style="{StaticResource EditFormDataElementTextBlockStyle}"/>
