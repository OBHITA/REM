    d:DesignHeight="300" d:DesignWidth="400" Header="AUDIT" ScrollViewer.VerticalScrollBarVisibility="Auto" Style="{StaticResource DashboardTileViewStyle}" HeaderStyle="{StaticResource DashboardTileHeaderStyle}" TileState="{Binding ElementName=frcContent,Path=State,Converter={StaticResource FluideStateToTileConverterInstance},Mode=TwoWay}">

    <Controls:RadTileViewItem.Resources>
