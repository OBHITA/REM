                                                            <StackPanel  Style="{StaticResource ScreenerStackPanelStyle}" d:LayoutOverrides="Height">
                                                                <Grid>
                                                                    <Grid.ColumnDefinitions>
                                                                        <ColumnDefinition Width="0.535*"/>
                                                                        <ColumnDefinition Width="0.465*"/>
                                                                    </Grid.ColumnDefinitions>
                                                                    <TextBlock Text="Guidance Summary: "  Style="{StaticResource ScreenerDataElementTextBlockStyle}" Grid.Column="0" />
                                                                    <telerik:RadButton Content="Guidance" HorizontalAlignment="Right" Style="{StaticResource RemRadLinkButtonStyle}" Grid.Column="1">
                                                                        <i:Interaction.Triggers>
                                                                            <i:EventTrigger EventName="Click">
                                                                                <i:InvokeCommandAction Command="{Binding DataSource.ShowGuidanceCommand, Source={StaticResource RootDataContext}}" CommandParameter="{Binding}"/>
                                                                            </i:EventTrigger>
                                                                        </i:Interaction.Triggers>
                                                                    </telerik:RadButton>
                                                                </Grid>
                                                                <StackPanel>
                                                                    <TextBlock Text="-" Visibility ="{Binding AuditScore, ConverterParameter=null, Converter={StaticResource RangeToVisibilityConverter}}" Style="{StaticResource ScreenerLabelTextBlockStyle}" Margin="0" VerticalAlignment="Stretch" HorizontalAlignment="Stretch"/>
                                                                    <TextBlock Visibility ="{Binding AuditScore, ConverterParameter='min, 7', Converter={StaticResource RangeToVisibilityConverter}}" Style="{StaticResource ScreenerLabelTextBlockStyle}" Margin="0" VerticalAlignment="Center"><Run Text="Advise staying within the recommended drinking limits."/></TextBlock>
                                                                    <TextBlock Visibility ="{Binding AuditScore, ConverterParameter='8, 15', Converter={StaticResource RangeToVisibilityConverter}}" Style="{StaticResource ScreenerLabelTextBlockStyle}" Margin="0" VerticalAlignment="Center"><Run Text="Offer simple advice and advise staying within the recommended drinking limits."/></TextBlock>
                                                                    <TextBlock Visibility ="{Binding AuditScore, ConverterParameter='16, 19', Converter={StaticResource RangeToVisibilityConverter}}" Style="{StaticResource ScreenerLabelTextBlockStyle}" Margin="0" VerticalAlignment="Center"><Run Text="Simple Advice plus Brief Counseling and Continued Monitoring."/></TextBlock>
                                                                    <TextBlock Visibility ="{Binding AuditScore, ConverterParameter='20, max', Converter={StaticResource RangeToVisibilityConverter}}" Style="{StaticResource ScreenerLabelTextBlockStyle}" Margin="0" VerticalAlignment="Center"><Run Text="Further diagnostic evaluation for alcohol dependence."/></TextBlock>
                                                                </StackPanel>
                                                            </StackPanel>
                                                        </Border>
                                                    </Grid>
                                                </StackPanel>
                                            </StackPanel>
                                        </Border>
                                    </DataTemplate>
                                </CustomControls:EditableExpander.ContentTemplate>
                                <CustomControls:EditableExpander.ContentEditTemplate>
                                    <DataTemplate>
                                        <Border Style="{StaticResource ScreenerSectionBorderStyle}">
                                            <StackPanel>
                                                <StackPanel Style="{StaticResource ScreenerStackPanelStyle}" Orientation="Horizontal">
                                                    <TextBlock Text="1. How often do you have a drink containing alcohol?" Style="{StaticResource ScreenerLabelTextBlockStyleS}" Margin="10 0 0 0"/>
                                                    <StackPanel Style="{StaticResource EditFormStackPanelStyle}" VerticalAlignment="Top" HorizontalAlignment="Stretch" Width="Auto">
                                                        <ListBox BorderThickness="0" Background="Transparent" ItemsSource="{Binding Source={StaticResource HowOftenYouDrinkChoices}}" SelectedIndex="{Binding HowOftenYouDrinkNumber, Mode=TwoWay, Converter={StaticResource IntegerToCsvValueConverter}, ConverterParameter='0,1,2,3,4'}" >
                                                            <i:Interaction.Behaviors>
                                                                <Behavior:ListBoxSelectionBehavior />
                                                            </i:Interaction.Behaviors>
                                                            <ListBox.ItemContainerStyle>
                                                                <Style TargetType="ListBoxItem">
                                                                    <Setter Property="Template">
                                                                        <Setter.Value>
                                                                            <ControlTemplate TargetType="ListBoxItem">
                                                                                <Border Background="Transparent">
                                                                                    <RadioButton Content="{Binding}" IsHitTestVisible="False" IsChecked="{Binding RelativeSource={RelativeSource TemplatedParent},Path=IsSelected}"  HorizontalAlignment="Center" Style="{StaticResource ScreenerRadioButtonStyle}">
                                                                                        <RadioButton.ContentTemplate>
                                                                                            <DataTemplate>
                                                                                                <TextBlock Text="{Binding}" FontSize="9.333" TextWrapping="Wrap" TextAlignment="Center" VerticalAlignment="Bottom"/>
                                                                                            </DataTemplate>
                                                                                        </RadioButton.ContentTemplate>
                                                                                    </RadioButton>
                                                                                </Border>
                                                                            </ControlTemplate>
                                                                        </Setter.Value>
                                                                    </Setter>
                                                                </Style>
                                                            </ListBox.ItemContainerStyle>
                                                            <ListBox.ItemsPanel>
                                                                <ItemsPanelTemplate>
                                                                    <StackPanel Orientation="Horizontal"/>
                                                                </ItemsPanelTemplate>
                                                            </ListBox.ItemsPanel>
                                                        </ListBox>
                                                    </StackPanel>
                                                </StackPanel>
                                                <Border Style="{StaticResource HorizontalLineFormDivider}"/>
                                                <StackPanel Style="{StaticResource ScreenerStackPanelStyle}" Orientation="Horizontal">
