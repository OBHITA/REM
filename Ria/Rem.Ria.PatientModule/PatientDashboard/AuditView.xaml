        <telerik:InvertedBooleanToVisibilityConverter x:Key="InvertedBooleanToVisibilityConverter"/>
        <Converter:RangeToVisibilityConverter x:Key="RangeToVisibilityConverter" />
        <Converter:IntegerToCsvValueConverter x:Key="IntegerToCsvValueConverter"/>
        <Converter:ListIndexToValueConverter x:Key="ListIndexToValueConverter" />
        <toolkit:ObservableObjectCollection x:Key="HowOftenYouDrinkChoices">
            <System:String>Never</System:String>
            <System:String>Monthly or less</System:String>
            <System:String>2-4 times a month</System:String>
            <System:String>2-3 times a week</System:String>
            <System:String>4 or more times a week</System:String>
        </toolkit:ObservableObjectCollection>
        <toolkit:ObservableObjectCollection x:Key="AlcoholicDrinksPerDayChoices">
            <System:String>1 or 2</System:String>
            <System:String>3 or 4</System:String>
            <System:String>5 or 6</System:String>
            <System:String>7 or 9</System:String>
            <System:String>10 or more</System:String>
        </toolkit:ObservableObjectCollection>
        <toolkit:ObservableObjectCollection x:Key="DrinkingScenarioChoices">
            <System:String>Never</System:String>
            <System:String>Less than monthly</System:String>
            <System:String>Monthly</System:String>
            <System:String>Weekly</System:String>
            <System:String>Daily or almost daily</System:String>
        </toolkit:ObservableObjectCollection>
        <toolkit:ObservableObjectCollection x:Key="YesNoChoices">
            <System:String>No</System:String>
            <System:String>Yes, but not in the past year</System:String>
            <System:String>Yes, during the past year</System:String>
        </toolkit:ObservableObjectCollection>
