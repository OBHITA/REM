    <Controls:RadTileViewItem.HeaderTemplate>
        <DataTemplate>
            <Grid Margin="0 0 10 0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <StackPanel Margin="0,0,2,0" Grid.Column="0" >
                    <telerik:RadButton Style="{StaticResource TileDeleteButtonStyle}" Command="{Binding Source={StaticResource RootDataContext}, Path=DataSource.CloseViewCommand}" ToolTipService.ToolTip="Delete activity"></telerik:RadButton>
                </StackPanel>
                <Viewbox x:Name="Header"  Grid.Column="1" StretchDirection="DownOnly" HorizontalAlignment="Left" VerticalAlignment="Center">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="{Binding}" Style="{StaticResource TileHeaderTextBlockStyle}" Margin="0"/>
                    </StackPanel>
                </Viewbox>
            </Grid>
        </DataTemplate>
    </Controls:RadTileViewItem.HeaderTemplate>

    <i:Interaction.Behaviors>
        <Behavior:CloseViewBehavior />
    </i:Interaction.Behaviors>
    <telerik:RadFluidContentControl x:Name="frcContent"  Margin="0,0,0,0" State="{Binding IsCurrentActivity,Mode=OneWay, Converter={StaticResource BooleanToFluidContentControlStateLargeConverterInstance}}" ContentChangeMode="Manual" Style="{StaticResource RfccRemStyle}">
        <telerik:RadFluidContentControl.SmallContent>
            <Grid/>
        </telerik:RadFluidContentControl.SmallContent>
        <telerik:RadFluidContentControl.Content>
            <Grid/>
        </telerik:RadFluidContentControl.Content>
        <telerik:RadFluidContentControl.LargeContent>
            <ScrollViewer HorizontalScrollBarVisibility="Disabled" VerticalScrollBarVisibility="Disabled" Margin="0" Padding="0" BorderThickness="0">
                <Grid>
                    <CustomControls:Editor MaximizeHeader="Audit" Style="{StaticResource TileEditorHeaderStyle}" StartOpen="True" SaveCommand="{Binding SaveCommand}" CancelCommand="{Binding CancelCommand}" AccessControlManager="{Binding AccessControlManager}" CanMaximize="True">
                        <CustomControls:Editor.Expanders>
                            <CustomControls:EditableExpander x:Name="Audit" CanMaximize="False"
                                         Content="{Binding EditingDto}" 
                                         SaveCommand="{Binding SaveCommand}" 
                                         CancelCommand="{Binding CancelCommand}" 
                                         AccessControlManager="{Binding AccessControlManager}" IsExpanded="True"  MaxWidth="800" MinWidth="700"  Width="Auto" IsEditing="True" ShowNext="False">
                                <i:Interaction.Triggers>
                                    <ei:DataTrigger Binding="{Binding IsCreate}" Comparison="Equal" Value="True">
                                        <ei:ChangePropertyAction TargetName="Audit" PropertyName="IsExpanded" Value="True"/>
                                        <i:InvokeCommandAction Command="{Binding ElementName=Audit,Path=SetAsNextCommand}"/>
                                    </ei:DataTrigger>
                                </i:Interaction.Triggers>

                                <CustomControls:EditableExpander.HeaderTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal" >
                                            <TextBlock Text="{Binding}"/>
                                        </StackPanel>
                                    </DataTemplate>
                                </CustomControls:EditableExpander.HeaderTemplate>
                                <CustomControls:EditableExpander.ContentTemplate>
                                    <DataTemplate>
                                        <Border Style="{StaticResource ScreenerSectionBorderStyle}">
                                            <StackPanel>
                                                <StackPanel Style="{StaticResource ScreenerStackPanelStyle}" Orientation="Horizontal">
                                                    <TextBlock Text="1. How often do you have a drink containing alcohol?" Style="{StaticResource ScreenerLabelTextBlockStyleS}" Margin="10 0 0 0"/>
                                                    <StackPanel Style="{StaticResource EditFormStackPanelStyle}" Width="Auto" VerticalAlignment="Top" Margin="20,2,0,2">
                                                        <TextBlock Style="{StaticResource ScreenerDataElementTextBlockStyle}">
                                                    <i:Interaction.Behaviors>
                                                        <Behavior:MultiBindingsBehavior>
                                                            <Behavior:MultiBindingsBehavior.MultiBindings>
                                                                <Behavior:MultiBinding TargetProperty="Text" Converter="{StaticResource ListIndexToValueConverter}">
                                	                                <Behavior:MultiBinding.Bindings>
                                		                                <Behavior:BindingCollection>
                                			                                <Binding Path="HowOftenYouDrinkNumber" Converter="{StaticResource IntegerToCsvValueConverter}" ConverterParameter="0,1,2,3,4"/>
                                                                            <Binding Source="{StaticResource AlcoholicDrinksPerDayChoices}"/>
                                		                                </Behavior:BindingCollection>
                                	                                </Behavior:MultiBinding.Bindings>
                                                                </Behavior:MultiBinding>
                                                            </Behavior:MultiBindingsBehavior.MultiBindings>
                                                        </Behavior:MultiBindingsBehavior>
                                                    </i:Interaction.Behaviors>
                                                        </TextBlock>
                                                    </StackPanel>
                                                </StackPanel>
                                                <Border Style="{StaticResource HorizontalLineFormDivider}"/>
                                                <StackPanel Style="{StaticResource ScreenerStackPanelStyle}" Orientation="Horizontal">
                                                    <TextBlock Text="2. How many standard drinks containing alcohol do you have on a typical day?" Style="{StaticResource ScreenerLabelTextBlockStyleS}" Margin="10 0 0 0"/>
                                                    <StackPanel Style="{StaticResource EditFormStackPanelStyle}" Width="Auto" VerticalAlignment="Top" Margin="20,2,0,2">
                                                        <TextBlock Style="{StaticResource ScreenerDataElementTextBlockStyle}">
                                                    <i:Interaction.Behaviors>
                                                        <Behavior:MultiBindingsBehavior>
                                                            <Behavior:MultiBindingsBehavior.MultiBindings>
                                                                <Behavior:MultiBinding TargetProperty="Text" Converter="{StaticResource ListIndexToValueConverter}">
                                	                                <Behavior:MultiBinding.Bindings>
                                		                                <Behavior:BindingCollection>
                                			                                <Binding Path="AlcoholicDrinksPerDayNumber" Converter="{StaticResource IntegerToCsvValueConverter}" ConverterParameter="0,1,2,3,4"/>
                                                                            <Binding Source="{StaticResource AlcoholicDrinksPerDayChoices}"/>
                                		                                </Behavior:BindingCollection>
                                	                                </Behavior:MultiBinding.Bindings>
                                                                </Behavior:MultiBinding>
                                                            </Behavior:MultiBindingsBehavior.MultiBindings>
                                                        </Behavior:MultiBindingsBehavior>
                                                    </i:Interaction.Behaviors>
                                                        </TextBlock>
                                                    </StackPanel>
                                                </StackPanel>
                                                <Border Style="{StaticResource HorizontalLineFormDivider}"/>
                                                <StackPanel  Style="{StaticResource ScreenerStackPanelStyle}" Orientation="Horizontal">
                                                    <TextBlock Text="3. How often do you have six or more drinks on one occasion?" Style="{StaticResource ScreenerLabelTextBlockStyleS}" Margin="10 0 0 0"/>
                                                    <StackPanel Style="{StaticResource EditFormStackPanelStyle}" Width="Auto" VerticalAlignment="Top" Margin="20,2,0,2">
                                                        <TextBlock Style="{StaticResource ScreenerDataElementTextBlockStyle}">
                                                    <i:Interaction.Behaviors>
                                                        <Behavior:MultiBindingsBehavior>
                                                            <Behavior:MultiBindingsBehavior.MultiBindings>
                                                                <Behavior:MultiBinding TargetProperty="Text" Converter="{StaticResource ListIndexToValueConverter}">
                                	                                <Behavior:MultiBinding.Bindings>
                                		                                <Behavior:BindingCollection>
                                			                                <Binding Path="HowOftenYouHaveSixOrMoreDrinksNumber" Converter="{StaticResource IntegerToCsvValueConverter}" ConverterParameter="0,1,2,3,4"/>
                                                                            <Binding Source="{StaticResource DrinkingScenarioChoices}"/>
                                		                                </Behavior:BindingCollection>
                                	                                </Behavior:MultiBinding.Bindings>
                                                                </Behavior:MultiBinding>
                                                            </Behavior:MultiBindingsBehavior.MultiBindings>
                                                        </Behavior:MultiBindingsBehavior>
                                                    </i:Interaction.Behaviors>
                                                        </TextBlock>
                                                    </StackPanel>
                                                </StackPanel>
                                                <Border Style="{StaticResource HorizontalLineFormDivider}"/>
                                                <StackPanel  Style="{StaticResource ScreenerStackPanelStyle}" Orientation="Horizontal">
                                                    <TextBlock Text="4. How often during the last year have you found that you were not able to stop drinking once you had started?" Style="{StaticResource ScreenerLabelTextBlockStyleS}" Margin="10 0 0 0"/>
                                                    <StackPanel Style="{StaticResource EditFormStackPanelStyle}" Width="Auto" VerticalAlignment="Top" Margin="20,2,0,2">
                                                        <TextBlock Style="{StaticResource ScreenerDataElementTextBlockStyle}">
                                                    <i:Interaction.Behaviors>
                                                        <Behavior:MultiBindingsBehavior>
                                                            <Behavior:MultiBindingsBehavior.MultiBindings>
                                                                <Behavior:MultiBinding TargetProperty="Text" Converter="{StaticResource ListIndexToValueConverter}">
                                	                                <Behavior:MultiBinding.Bindings>
                                		                                <Behavior:BindingCollection>
                                			                                <Binding Path="PastYearHowOftenYouWereUnableToStopDrinkingNumber" Converter="{StaticResource IntegerToCsvValueConverter}" ConverterParameter="0,1,2,3,4"/>
                                                                            <Binding Source="{StaticResource DrinkingScenarioChoices}"/>
                                		                                </Behavior:BindingCollection>
                                	                                </Behavior:MultiBinding.Bindings>
                                                                </Behavior:MultiBinding>
                                                            </Behavior:MultiBindingsBehavior.MultiBindings>
                                                        </Behavior:MultiBindingsBehavior>
                                                    </i:Interaction.Behaviors>
                                                        </TextBlock>
                                                    </StackPanel>
                                                </StackPanel>
                                                <Border Style="{StaticResource HorizontalLineFormDivider}"/>
                                                <StackPanel  Style="{StaticResource ScreenerStackPanelStyle}" Orientation="Horizontal">
                                                    <TextBlock Text="5. How often during the last year have you failed to do what was normally expected from you because of drinking?" Style="{StaticResource ScreenerLabelTextBlockStyleS}" Margin="10 0 0 0"/>
                                                    <StackPanel Style="{StaticResource EditFormStackPanelStyle}" Width="Auto" VerticalAlignment="Top" Margin="20,2,0,2">
                                                        <TextBlock Style="{StaticResource ScreenerDataElementTextBlockStyle}">
                                                    <i:Interaction.Behaviors>
                                                        <Behavior:MultiBindingsBehavior>
                                                            <Behavior:MultiBindingsBehavior.MultiBindings>
                                                                <Behavior:MultiBinding TargetProperty="Text" Converter="{StaticResource ListIndexToValueConverter}">
                                	                                <Behavior:MultiBinding.Bindings>
                                		                                <Behavior:BindingCollection>
                                			                                <Binding Path="PastYearHowOftenYouFailedNormalExpectationNumber" Converter="{StaticResource IntegerToCsvValueConverter}" ConverterParameter="0,1,2,3,4"/>
                                                                            <Binding Source="{StaticResource DrinkingScenarioChoices}"/>
                                		                                </Behavior:BindingCollection>
                                	                                </Behavior:MultiBinding.Bindings>
                                                                </Behavior:MultiBinding>
                                                            </Behavior:MultiBindingsBehavior.MultiBindings>
                                                        </Behavior:MultiBindingsBehavior>
                                                    </i:Interaction.Behaviors>
                                                        </TextBlock>
                                                    </StackPanel>
                                                </StackPanel>
                                                <Border Style="{StaticResource HorizontalLineFormDivider}"/>
                                                <StackPanel  Style="{StaticResource ScreenerStackPanelStyle}" Orientation="Horizontal">
                                                    <TextBlock Text="6. How often during the last year have you needed a first drink in the morning to get yourself going after a heavy drinking session?" Style="{StaticResource ScreenerLabelTextBlockStyleS}" Margin="10 0 0 0"/>
                                                    <StackPanel Style="{StaticResource EditFormStackPanelStyle}" Width="Auto" VerticalAlignment="Top" Margin="20,2,0,2">
                                                        <TextBlock Style="{StaticResource ScreenerDataElementTextBlockStyle}">
                                                    <i:Interaction.Behaviors>
                                                        <Behavior:MultiBindingsBehavior>
                                                            <Behavior:MultiBindingsBehavior.MultiBindings>
                                                                <Behavior:MultiBinding TargetProperty="Text" Converter="{StaticResource ListIndexToValueConverter}">
                                	                                <Behavior:MultiBinding.Bindings>
                                		                                <Behavior:BindingCollection>
                                			                                <Binding Path="PastYearHowOftenYouDrinkInMorningNumber" Converter="{StaticResource IntegerToCsvValueConverter}" ConverterParameter="0,1,2,3,4"/>
                                                                            <Binding Source="{StaticResource DrinkingScenarioChoices}"/>
                                		                                </Behavior:BindingCollection>
                                	                                </Behavior:MultiBinding.Bindings>
                                                                </Behavior:MultiBinding>
                                                            </Behavior:MultiBindingsBehavior.MultiBindings>
                                                        </Behavior:MultiBindingsBehavior>
                                                    </i:Interaction.Behaviors>
                                                        </TextBlock>
                                                    </StackPanel>
                                                </StackPanel>
                                                <Border Style="{StaticResource HorizontalLineFormDivider}"/>
                                                <StackPanel  Style="{StaticResource ScreenerStackPanelStyle}" Orientation="Horizontal">
                                                    <TextBlock Text="7. How often during the last year have you had a feeling of guilt or remorse after drinking?" Style="{StaticResource ScreenerLabelTextBlockStyleS}" Margin="10 0 0 0"/>
                                                    <StackPanel Style="{StaticResource EditFormStackPanelStyle}" Width="Auto" VerticalAlignment="Top" Margin="20,2,0,2">
                                                        <TextBlock Style="{StaticResource ScreenerDataElementTextBlockStyle}">
                                                    <i:Interaction.Behaviors>
                                                        <Behavior:MultiBindingsBehavior>
                                                            <Behavior:MultiBindingsBehavior.MultiBindings>
                                                                <Behavior:MultiBinding TargetProperty="Text" Converter="{StaticResource ListIndexToValueConverter}">
                                	                                <Behavior:MultiBinding.Bindings>
                                		                                <Behavior:BindingCollection>
                                			                                <Binding Path="PastYearHowOftenYouHadGuiltAfterDrinkingNumber" Converter="{StaticResource IntegerToCsvValueConverter}" ConverterParameter="0,1,2,3,4"/>
                                                                            <Binding Source="{StaticResource DrinkingScenarioChoices}"/>
                                		                                </Behavior:BindingCollection>
                                	                                </Behavior:MultiBinding.Bindings>
                                                                </Behavior:MultiBinding>
                                                            </Behavior:MultiBindingsBehavior.MultiBindings>
                                                        </Behavior:MultiBindingsBehavior>
                                                    </i:Interaction.Behaviors>
                                                        </TextBlock>
                                                    </StackPanel>
                                                </StackPanel>
                                                <Border Style="{StaticResource HorizontalLineFormDivider}"/>
                                                <StackPanel  Style="{StaticResource ScreenerStackPanelStyle}" Orientation="Horizontal">
                                                    <TextBlock Text="8. How often during the last year have you been unable to remember what happened the night before because you had been drinking?" Style="{StaticResource ScreenerLabelTextBlockStyleS}" Margin="10 0 0 0"/>
                                                    <StackPanel Style="{StaticResource EditFormStackPanelStyle}" Width="Auto" VerticalAlignment="Top" Margin="20,2,0,2">
                                                        <TextBlock Style="{StaticResource ScreenerDataElementTextBlockStyle}">
                                                    <i:Interaction.Behaviors>
                                                        <Behavior:MultiBindingsBehavior>
                                                            <Behavior:MultiBindingsBehavior.MultiBindings>
                                                                <Behavior:MultiBinding TargetProperty="Text" Converter="{StaticResource ListIndexToValueConverter}">
                                	                                <Behavior:MultiBinding.Bindings>
                                		                                <Behavior:BindingCollection>
                                			                                <Binding Path="PastYearHowOftenYouForgotNightBeforeNumber" Converter="{StaticResource IntegerToCsvValueConverter}" ConverterParameter="0,1,2,3,4"/>
                                                                            <Binding Source="{StaticResource DrinkingScenarioChoices}"/>
                                		                                </Behavior:BindingCollection>
                                	                                </Behavior:MultiBinding.Bindings>
                                                                </Behavior:MultiBinding>
                                                            </Behavior:MultiBindingsBehavior.MultiBindings>
                                                        </Behavior:MultiBindingsBehavior>
                                                    </i:Interaction.Behaviors>
                                                        </TextBlock>
                                                    </StackPanel>
                                                </StackPanel>
                                                <Border Style="{StaticResource HorizontalLineFormDivider}"/>
                                                <StackPanel  Style="{StaticResource ScreenerStackPanelStyle}" Orientation="Horizontal">
                                                    <TextBlock Text="9. Have you or someone else been injured as a result of your drinking?" Style="{StaticResource ScreenerLabelTextBlockStyleS}" Margin="10 0 0 0"/>
                                                    <StackPanel Style="{StaticResource EditFormStackPanelStyle}" Width="Auto" VerticalAlignment="Top" Margin="20,2,0,2">
                                                        <TextBlock Style="{StaticResource ScreenerDataElementTextBlockStyle}">
                                                    <i:Interaction.Behaviors>
                                                        <Behavior:MultiBindingsBehavior>
                                                            <Behavior:MultiBindingsBehavior.MultiBindings>
                                                                <Behavior:MultiBinding TargetProperty="Text" Converter="{StaticResource ListIndexToValueConverter}">
                                	                                <Behavior:MultiBinding.Bindings>
                                		                                <Behavior:BindingCollection>
                                			                                <Binding Path="YouOrSomeoneInjuredDueToYourDrinkingNumber" Converter="{StaticResource IntegerToCsvValueConverter}" ConverterParameter="0,2,4"/>
                                                                            <Binding Source="{StaticResource YesNoChoices}"/>
                                		                                </Behavior:BindingCollection>
                                	                                </Behavior:MultiBinding.Bindings>
                                                                </Behavior:MultiBinding>
                                                            </Behavior:MultiBindingsBehavior.MultiBindings>
                                                        </Behavior:MultiBindingsBehavior>
                                                    </i:Interaction.Behaviors>
                                                        </TextBlock>
                                                    </StackPanel>
                                                </StackPanel>
                                                <Border Style="{StaticResource HorizontalLineFormDivider}"/>
                                                <StackPanel  Style="{StaticResource ScreenerStackPanelStyle}" Orientation="Horizontal">
                                                    <TextBlock Text="10. Has a relative or friend or a doctor or other health worker been concerned about your drinking or suggested you cut down?" Style="{StaticResource ScreenerLabelTextBlockStyleS}" Margin="10 0 0 0"/>
                                                    <StackPanel Style="{StaticResource EditFormStackPanelStyle}" Width="Auto" VerticalAlignment="Top" Margin="20,2,0,2">
                                                        <TextBlock Style="{StaticResource ScreenerDataElementTextBlockStyle}">
                                                    <i:Interaction.Behaviors>
                                                        <Behavior:MultiBindingsBehavior>
                                                            <Behavior:MultiBindingsBehavior.MultiBindings>
